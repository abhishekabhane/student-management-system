<%- include("partials/header") -%>

    <h1 id="heading1">
        Student database
    </h1>

    <form style="display: inline-flex; margin: 15px 0 10px 0;" action="/search" method="POST">
        <input class="form-control " type="search" placeholder="name" aria-label="Search" name="searchname" required>
        <button class="btn btn-primary" type="submit" style="margin-left: 10px;">Search</button>
    </form>

    <table class="table table-striped">
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Class</th>
            <th>Roll No.</th>
            <th>Date Of Birth</th>
            <th>Phone Number</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        <% students.forEach(student => { %>
            <tr>
                <td>
                    <%= student.email %>
                </td>
                <td>
                    <%= student.name %>
                </td>
                <td>
                    <%= student.class %>
                </td>
                <td>
                    <%= student.rollNo %>
                </td>
                <td>
                    <%= student.dob %>
                </td>
                <td>
                    <%= student.phone %>
                </td>
                <td>
                    <form action="/delete" method="post">
                        <!-- <input type="checkbox" name="checkbox" value="<%= student._id %>"> -->
                        <button type="submit" class="btn" id="trash" value="<%= student._id %>" name="deleteitem"><i class="fa fa-trash fa-lg"></i></button>
                    </form>
                </td>
                <td>
                    <a href='/update/<%= student._id %>'><button type='button' id="edit-btn" class="btn" value="<%= student._id %>"><i class="fa fa-edit fa-lg"></i></button></a>
                </td>
            </tr>
            <% }) %>
    </table>

    <%- include("partials/footer") -%>