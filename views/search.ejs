<%- include("partials/header") -%>

    <h1 id="heading1">
        Student database
    </h1>

    <form style="display: inline-flex; margin: 15px 0 10px 0;" action="/search" method="POST">
        <input class="form-control " type="search" placeholder="name" aria-label="Search" name="searchname" required>
        <button class="btn btn-primary" type="submit" style="margin-left: 10px;">Search</button>
    </form>

    <table class="table table-striped">
        <tr>
            <th>Email</th>
            <th>Name</th>
            <th>Class</th>
            <th>Roll No.</th>
            <th>Date Of Birth</th>
            <th>Phone Number</th>
        </tr>
        <% students.forEach(student => { %>
            <tr>
                <td>
                    <%= student.email %>
                </td>
                <td>
                    <%= student.name %>
                </td>
                <td>
                    <%= student.class %>
                </td>
                <td>
                    <%= student.rollNo %>
                </td>
                <td>
                    <%= student.dob %>
                </td>
                <td>
                    <%= student.phone %>
                </td>
            </tr>
            <% }) %>
    </table>

    <a href="/studenttable"><button type="submit" class="btn btn-primary">Back</button></a>

    <%- include("partials/footer") -%>